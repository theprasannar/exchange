{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    // If you use path aliases (like "db/lib/prisma"):
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "db/*": ["../db/src/*"]
    },
    // If you have TS6305 errors with references:
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../db" }
  ]
}
